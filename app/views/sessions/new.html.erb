
<div class="container">
  <h1 class="title">Login</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_tag '/login' do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
    
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= submit_tag "Login", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>